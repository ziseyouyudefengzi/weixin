
/* components/board/board.wxss */

.board-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  overflow: hidden;
}

/* 棋盘触摸反馈 */
canvas {
  transition: transform 0.1s;
}

canvas:active {
  transform: scale(0.98);
}