
/* 基础样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 100%;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

/* 按钮基础样式 */
.btn {
  margin: 20rpx 0;
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  background-color: #2b2b2b;
  color: white;
  text-align: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn:active {
  opacity: 0.8;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #333;
}

/* 模式选择卡片 */
.mode-card {
  width: 80%;
  margin: 20rpx 0;
  padding: 30rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}